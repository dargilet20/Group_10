extends signed-in

block content
  #box
    #Container_Header Edit your Dog
    #form-container_sign-up.info
      form#edit-dog-form(action='')
        table(cellpadding='10' cellspacing='3')
          tr
            td
              label#Labels_Id(for='dogname')
                | Dog Name
            td
              input#dogname.input_signUp(type='text' required='' name='dogname' maxlength='50' placeholder='')
          tr
            td
              label#Labels_Id(for='int') Dog Age
            td
              input#Age.input_signUp(type='number' required='' name='dogage' placeholder='')
          tr
            td
              label#Labels_Id(for='text')
                | Dog Type
            td
              select#dogtype.input_Upload(name='TypesOfDogs' required='')
                option(value='')
                option(value='Maltase') Maltase
                option(value='German Shepherd') German Shepherd
                option(value='Belgian shepherd') Belgian shepherd
                option(value='poodle') poodle
                option(value='Pincher') Pincher
                option(value='bulldog') bulldog
                option(value='pitdog') pitdog
                option(value='boxer') boxer
                option(value='Pekingese') Pekingese
                option(value='Beagle') Beagle
                option(value='Golden retriever') Golden retriever
                option(value='Doberman') Doberman
                option(value='Dalmatian') Dalmatian
                option(value='labrador') labrador
                option(value='Pomeranian') Pomeranian
                option(value='Shitso') Shitso
          tr
          tr
            td
              label#Labels_Id(for='text')
                | Dog Gender
            td
              select#doggender.input_Upload(name='TypesOfDogs' required='')
                option(value='')
                option(value='M') Male
                option(value='F') Female
          tr
            td
              label#Labels_Id(for='text')
                | Dog Area
            td
              select#places.input_Upload(name='places' required='')
                option(value='')
                option(value='North') North
                option(value='South') South
                option(value='East') East
                option(value='West') West
          tr
            td
              label#Labels_Id(for='text')
                | Dog Status
            td
              select#dogstatus.input_Upload(name='statusOfDog' required='')
                option(value='')
                option(value='Awaiting adoption') Awaiting adoption
                option(value='Adopted') Adopted
                option(value='Foster') Foster
          tr
            td
              label#Labels_Id(for='text')
                | Dog Size
            td
              select#dogsize.input_Upload(name='sizeOfDog' required='')
                option(value='')
                option(value='Small') Small
                option(value='Medium') Medium
                option(value='Big') Big
          tr
            td
              label#Labels_Id(for='text')
                | Additional description
            td
              textarea#Additional_description.input_signUp(name='Text' cols='30' rows='10' maxlength='1000' placeholder='Additional details about your dog')
          tr
            td
              label#Labels_Id(for='text')
                | Image URL
            td
              input#image.input_signUp(type='text' name='image')
        table(cellpadding='8' cellspacing='3')
          tr
            td
              button#edit-dog-button(type='submit')
                | Save